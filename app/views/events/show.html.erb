<% provide(:title, @event.title) %>

<header>
	<h2><%= @event.title %></h2>
	<ul class="actions">
		<% if policy(@event).edit? %>
			<li>
				<%= link_to "Edit", edit_event_path(@event), class: "edit" %>
			</li>
		<% end %>
		<% if policy(@event).destroy? %>
			<li>
				<%= link_to "Delete", event_path(@event), method: :delete, data: {confirm: "Are you sure?"}, class: "delete" %></li>
		<% end %>
	</ul>
</header>

<div class="row">
	<div class="col-sm-9">
		<%= image_tag "http://via.placeholder.com/1080x500", class: "event-image" %>

		<div class="event-meta">
			<h4><span class="event-start"><strong>Starts:</strong><%= time_format(@event.start_date) %></span></h4>
			<p><span class="event-start"><strong>Ends:</strong><%= time_format(@event.end_date) %></span></p>
		</div>

		<div class="event-details">
			<h3>Event Details</h3>
			<p><%= @event.description %></p>
		</div>
	</div>

	<div class="col-sm-3">
		<div class="sidebar">
			<h4 class="organizer">Oraganizer Name <%= @event.organizer.organization_name %></h4>
			<p>
				<span class="event-venue"><%= @event.venue %>, <strong><%= @event.location %></strong></span>
			</p>
		</div>
		<div class="sidebar">
			<h4 class="tags">Tags</h4>
		</div>
		<hr>
		<div class="sidebar">
			<h4 class="attendees">Attendees</h4>
		</div>
		<hr>
		<div class="sidebar">
			<h4 class="likes">Likes</h4>
		</div>
	</div>
</div>

<p><%= link_to "Back", events_path %></p>