<% provide(:title, @event.title) %>

<header>
  <h1 id="show-title"><%= @event.title %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Event", edit_event_path(@event), class: "edit" if policy(@event).edit? %></li>
    <li><%= link_to "Delete Event", event_path(@event), method: :delete, data: {confirm: "Are you sure?"}, class: "delete" if policy(@event).destroy? %></li>   
  </ul>
</header>

<div class="row">
	<div class="col-sm-9">
		<%= image_tag "http://via.placeholder.com/848x500", class: "event-image" %>

		<div class="event-meta">
			<h4><span class="event-start"><strong>Starts:</strong><%= time_format(@event.start_date) %></span></h4>
			<p><span class="event-start"><strong>Ends:</strong><%= time_format(@event.end_date) %></span></p>
		</div>

		<div class="event-details">
			<h3>Event Details</h3>
			<p><%= @event.description %></p>
		</div>
	</div>

	<div class="col-sm-3">
		<div class="sidebar">
			<h4 class="organizer"><i class="fa fa-user" aria-hidden="true"></i>Oraganizer Name <%= @event.organizer.organization_name %></h4>
			<p>
				<span class="event-venue"><%= @event.venue %>, <strong><%= @event.location %></strong></span>
			</p>
		</div>
		<div class="sidebar">
			<h4 class="tags"><i class="fa fa-tag" aria-hidden="true"></i>Tags</h4>
		</div>
		<hr>
		<div class="sidebar">
			<h4 class="attendees"><i class="fa fa-users" aria-hidden="true"></i>Attendees</h4>
		</div>
		<hr>
		<div class="sidebar">
			<h4 class="likes"><i class="fa fa-heart" aria-hidden="true"></i> Likes</h4>
		</div>
	</div>
</div>

<p><%= link_to "Back", events_path %></p>